<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
 		http://www.springframework.org/schema/beans
 		http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="client" class="Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Cena"/>
    </bean>

    <bean id="consoleEventLogger" class="ConsoleEventLogger"/>
    <bean id="fileEventLogger" class="FileEventLogger">
        <constructor-arg value="â€ªC:\Users\admin\Desktop\log.txt"/>
    </bean>

    <bean id="dateFormat" class="java.text.DateFormat" factory-method="getDateInstance"/>

    <bean id="event" class="Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dateFormat"/>
    </bean>

    <bean id="app" class="App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="consoleEventLogger"/>
    </bean>

</beans>